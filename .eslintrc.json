{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@babel/eslint-parser",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "eqeqeq": "warn",
    "indent": ["warn", 2],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "no-dupe-args": "warn",
    "no-dupe-else-if": "warn",
    "no-irregular-whitespace": ["warn", { "skipComments": true }],
    "no-unreachable": "warn",
    "no-empty-function": "warn",
    "no-useless-return": "warn"
  }
}
